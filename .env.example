# Example environment configuration
# Copy this file to .env and update with your values

# Flask secret key (generate a secure random string)
SECRET_KEY=your-secret-key-here

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Local Development Mode
# Set to 'true' to bypass OIDC authentication with a mock user (not recommended for production)
LOCAL_DEV_MODE=false

# OIDC Provider Selection
# Supported values: 'keycloak', 'azure', 'azuread', 'google'
OIDC_PROVIDER=keycloak

# Default role for authenticated users (if no roles are assigned by the provider)
DEFAULT_ROLE=S3-Viewer

# =============================================================================
# KEYCLOAK CONFIGURATION (when OIDC_PROVIDER=keycloak)
# =============================================================================
KEYCLOAK_SERVER_URL=http://localhost:8090
KEYCLOAK_REALM=s3-manager
KEYCLOAK_CLIENT_ID=s3-manager-client
KEYCLOAK_CLIENT_SECRET=dev-client-secret-12345
KEYCLOAK_SCOPES=openid profile email

# =============================================================================
# MICROSOFT ENTRA ID / AZURE AD CONFIGURATION (when OIDC_PROVIDER=azure)
# =============================================================================
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# PIM Configuration (Azure AD only)
PIM_ENABLED=false

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (when OIDC_PROVIDER=google)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_SCOPES=openid profile email

# =============================================================================
# S3 / ROOK-CEPH CONFIGURATION
# =============================================================================
S3_ENDPOINT=http://localhost:4566
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_USE_SSL=false
S3_VERIFY_SSL=false

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_COOKIE_SECURE=false

# =============================================================================
# LOCAL DEVELOPMENT QUICK START
# =============================================================================
# For local development with Docker Compose:
# 1. Set OIDC_PROVIDER=keycloak
# 2. Set KEYCLOAK_SERVER_URL=http://localhost:8090
# 3. Use default Keycloak credentials from docker-compose.yml
# 4. Test users (all with realm roles already assigned):
#    - Username: admin     Password: admin123    Role: S3-Admin
#    - Username: editor    Password: editor123   Role: S3-Editor
#    - Username: viewer    Password: viewer123   Role: S3-Viewer
# 5. Keycloak Admin Console: http://localhost:8090/admin
#    - Username: admin     Password: admin
