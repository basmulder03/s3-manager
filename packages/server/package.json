{
  "name": "server",
  "version": "2.0.0",
  "description": "S3 Manager backend with tRPC",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --sourcemap=external",
    "start": "bun dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "docs:api:check": "bun -e \"import { getOpenApiDocument } from './src/openapi/document'; const doc = getOpenApiDocument('http://localhost:3000'); const pathCount = Object.keys((doc.paths ?? {})).length; if (pathCount === 0) throw new Error('OpenAPI document has no paths'); console.log('OpenAPI paths:', pathCount);\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@aws-sdk/s3-request-presigner": "^3.998.0",
    "@hono/node-server": "^1.8.1",
    "@hono/trpc-server": "^0.4.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.5.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.212.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/resources": "^2.5.1",
    "@opentelemetry/sdk-metrics": "^2.5.1",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/sdk-trace-base": "^2.5.1",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@trpc/server": "^11.0.0",
    "dotenv": "^17.0.0",
    "hono": "^4.0.0",
    "jose": "^6.1.3",
    "pino": "^10.3.1",
    "trpc-openapi": "^1.2.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "bun-types": "^1.3.9",
    "typescript": "^5.3.3"
  }
}
