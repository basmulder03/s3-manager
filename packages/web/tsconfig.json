{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "../server/src/*"],
      "@web/*": ["./src/*"],
      "@server/*": ["../server/src/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "../server/src/trpc/**/*.ts",
    "../server/src/routers/**/*.ts",
    "../server/src/services/**/*.ts",
    "../server/src/shared/**/*.ts",
    "../server/src/auth/**/*.ts",
    "../server/src/telemetry/**/*.ts",
    "../server/src/config/**/*.ts"
  ],
  "exclude": [
    "../server/src/**/*.test.ts",
    "../server/src/**/*.integration.test.ts",
    "../server/src/index.ts",
    "../server/src/test-*.ts"
  ]
}
