FROM python:3.14-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY app/ ./app/
COPY config.py .
COPY run.py .

# Expose port
EXPOSE 8080

# Run application with hot reload for development
CMD ["python", "run.py"]
